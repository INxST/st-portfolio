---
import { SEO } from 'astro-seo';
import type { Meta } from '@/types/Meta';
import siteInfo from '@/data/siteInfo';
import updatePath from '@/libs/updatePath';
interface Props {
  meta: Meta;
}
const { meta } = Astro.props;
---

<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href={updatePath('/common/favicon.ico')} sizes="32x32" />
<link rel="icon" href={updatePath('/common/icon.svg')} type="image/svg+xml" />
<link
  rel="apple-touch-icon"
  href={updatePath('/common/apple-touch-icon.png')}
/>
<link rel="manifest" href={updatePath('/manifest.webmanifest')} />
<link rel="sitemap" href="/sitemap-index.xml" />
<SEO
  charset="UTF-8"
  title={meta.title}
  description={meta.description}
  openGraph={{
    basic: {
      title: meta.title,
      type: 'website',
      image: meta.image,
    },
    image: {
      alt: meta.title,
    },
    optional: {
      siteName: siteInfo.appName,
      description: meta.description,
      locale: 'ja_JP',
    },
  }}
  twitter={{
    card: 'summary',
    site: siteInfo.x,
    title: meta.title,
    description: meta.description,
    image: meta.image,
    imageAlt: meta.title,
    creator: siteInfo.x,
  }}
/>
<!-- Google tag (gtag.js) -->
<script
  async
  type="text/partytown"
  src="https://www.googletagmanager.com/gtag/js?id=G-VS04M3619P"
  is:inline></script>
<script type="text/partytown" is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());

  gtag('config', 'G-VS04M3619P');
</script>
