---
import type { Slide } from '@/types/Slide';
import updatePath from '@/libs/updatePath';

interface Props {
  items: Slide[];
}

const { items } = Astro.props;
---

<div class="ts-slider slider md:aspect-video w-full h-full">
  {
    items.map(item => (
      <div class="ts-slider-item slider__item">
        {item.type === 'video' ? (
          <video
            controls
            autoplay
            muted
            loop
            class="block w-full h-full object-cover"
          >
            <source
              src={updatePath(item.src.pc)}
              type="video/mp4"
              media="(min-width: 768px)"
            />
            <source
              src={updatePath(item.src.sp || item.src.pc)}
              type="video/mp4"
            />
          </video>
        ) : (
          <picture class="block w-full h-full object-cover">
            <source
              srcset={updatePath(item.src.pc)}
              media="(min-width: 768px)"
              class="w-full h-full object-cover"
            />
            <img
              src={updatePath(item.src.sp || item.src.pc)}
              alt={item.alt}
              class="w-full h-full object-cover"
            />
          </picture>
        )}
      </div>
    ))
  }
</div>

<script>
  import slider from './slider';
  slider();
</script>

<style lang="scss">
  .slider {
    position: relative;

    &__item {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
      right: 0;
      opacity: 0;
      transition: all 1s ease;

      &.is-active {
        opacity: 1;
      }
    }
  }
</style>
