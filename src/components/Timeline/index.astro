---
import type { Timeline } from '@/types/Timeline';
interface Props {
  items: Timeline[];
}

const { items } = Astro.props;
---

<div class="ts-drag-scroll relative w-full select-none">
  <ul
    class="ts-drag-scroll-container flex flex-nowrap overflow-x-scroll whitespace-nowrap pt-[calc(0.75rem/2)] contents-right md:overflow-x-hidden"
  >
    {
      items.map(item => {
        return (
          <li class="relative flex flex-col gap-6 border-t border-emperor pr-24 pt-6">
            <span class="absolute -top-[calc(0.75rem/2)] left-0 block h-3 w-3 rounded-full bg-taupe-gray" />
            <time
              datetime={item.date}
              class="font-serif-en text-taupe-gray md:text-lg"
            >
              {item.date}
            </time>
            <p class="w-[50vw] whitespace-normal text-silver-chalice md:w-72">
              {item.description}
            </p>
          </li>
        );
      })
    }
  </ul>
</div>

<script>
  import dragScroll from './dragScroll';
  dragScroll();
</script>
