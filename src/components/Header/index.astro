---
import headerLinks from '@/data/headerLinks';
---

<header>
  <div class="container max-w-[1760px] flex items-start py-[34px]">
    <a href="/" class="font-serif-en text-2xl md:text-4xl text-gray"
      >TAIKI SATO</a
    >

    <ul class="flex ml-auto gap-8">
      {
        headerLinks.map(link => (
          <li>
            <a href={link.href} class="text-2xl md:text-lg vertical-rl">
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>

    <button
      class="font-serif-en border border-silver rounded-[30px] ml-14 py-[6px] px-4 flex gap-2 items-center"
    >
      <span class="inline-block">Menu</span>
      <span class="inline-block rounded-full bg-taupe-gray w-[6px] h-[6px]"
      ></span>
    </button>
  </div>
</header>
