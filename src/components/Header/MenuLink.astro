---
import type { Menu } from '@/data/menus';

interface Props {
  menu: Menu;
}

const { menu } = Astro.props;
---

<span class="vertical-rl flex flex-row text-pampas overflow-hidden">
  <span class="horizontal-tb ml-2">
    <span>
      ({menu.number})
    </span>
  </span>
  <span class="flex flex-col mt-8">
    <span class="text-taupe-gray font-serif-en">
      <span>
        {menu.en}
      </span>
    </span>
    <span class="text-2xl md:text-4xl">{menu.text}</span>
  </span>
</span>
