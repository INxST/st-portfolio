---
import Image from 'astro/components/Image.astro';
import moon from '@/assets/moon.png';
import siteInfo from '@/data/siteInfo';
---

<section id="hero">
  <div
    class="bg-mine-shaft-texture contents-full text-silver-chalice py-16 h-screen flex flex-col justify-center"
  >
    <div class="grid grid-cols-3 items-end">
      <div
        class="relative inline-block overflow-hidden w-[37.5rem] h-[37.5rem] col-start-2"
      >
        <picture class="w-full h-full">
          <Image src={moon} alt="月" />
          <span
            id="mask"
            class="absolute -top-[calc(var(--moon-mask-ajust-size)/2)] -left-[calc(100%+var(--moon-mask-ajust-size))] bg-mine-shaft-texture w-[calc(100%+var(--moon-mask-ajust-size))] h-[calc(100%+var(--moon-mask-ajust-size))] rounded-full"
          ></span>
        </picture>
      </div>

      <p class="font-serif-en w-96 whitespace-pre-line">
        {siteInfo.description}
      </p>
    </div>

    <p class="mt-14 font-serif-en text-xl">
      Web design / Graphic design / Art direction
    </p>

    <h1 class="flex items-end gap-10">
      <span
        class="text-[17.5rem] leading-none font-serif-en text-taupe-gray -mb-8"
      >
        TAIKI SATO
      </span>

      <span class="inline-flex flex-col vertical-rl text-taupe-gray">
        <span class="font-serif-en text-lg leading-none whitespace-pre-line">
          <span>Portfolio</span>
        </span>
        <span class="font-semibold text-5xl leading-none whitespace-pre-line">
          <span>作品集</span>
        </span>
      </span>
    </h1>
  </div>
</section>

<script>
  import animation from './animation';
  animation();
</script>
