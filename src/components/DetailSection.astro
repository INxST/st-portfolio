---
import cn from '@/libs/cn';
interface Props {
  title: string;
  contentWidth?: 'narrow' | 'wide';
}
const { title, contentWidth } = Astro.props;
const contentClass = cn(
  {
    'md:w-[40rem]': !contentWidth || contentWidth === 'narrow',
    'md:w-[60rem]': contentWidth === 'wide',
  },
  'md:px-[13.75rem] box-content'
);
---

<section
  class="ts-horizontal-scroll-item flex items-center px-5 py-24 md:px-0 md:py-0"
>
  <div class={contentClass}>
    <div class="md:py-[calc(var(--header-height)+7.5rem)]">
      <h2 class="mb-9 font-serif-en text-lg md:mb-10 md:text-xl">{title}</h2>
      <div class="whitespace-normal">
        <slot />
      </div>
    </div>
  </div>
</section>
