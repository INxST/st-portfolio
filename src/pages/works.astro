---
import Layout from '@/layouts/Layout.astro';
import TitleVertical from '@/components/TitleVertical.astro';
import WorksSlide from '@/components/WorksSlide';
import works from '@/data/works';
const title = '制作実績';
const titleEn = 'WORKS';
---

<Layout title={titleEn}>
  <WorksSlide items={works} client:only="react">
    <TitleVertical jp={title} en={titleEn} />
  </WorksSlide>
</Layout>

<style>
  .ts-text-link {
    span {
      justify-content: center;

      gap: 0.2rem;
      @media screen and (min-width: 768px) {
        gap: 0.3rem;
      }
    }
  }
</style>
